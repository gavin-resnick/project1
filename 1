genre_and_distances = Table().with_columns('Genre', train_movies.column('Genre'), 
                                           'Distance', 
                                           (fast_distances(test_movies.drop(np.arange(5)).select(my_features).row(0), 
                                                           train_movies.drop(np.arange(5)).select(my_features)))).sort('Distance')
