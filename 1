def distance(features_array1, features_array2):
    """The Euclidean distance between two arrays of feature values."""
    z = make_array()
    for i in np.arange(len(features_array1)):
        j = (features_array1.item(i)-features_array2.item(i))**2
        z = np.append(z, j)
    return (sum(z))**.5


distance_first_to_second = distance(np.array(train_movies.drop(np.arange(5)).row(0)), 
                                    np.array(train_movies.drop(np.arange(5)).row(1)))
